<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_locker_album_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_locker_album_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_locker_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Lilac"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/item_locker_album_cardView"
        app:layout_constraintStart_toEndOf="@id/item_locker_album_cardView"/>
    <TextView
        android:id="@+id/item_locker_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_locker_album_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_locker_album_title_tv"/>
    <TextView
        android:id="@+id/item_locker_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.25252"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_locker_album_singer_tv"
        app:layout_constraintStart_toStartOf="@id/item_locker_album_singer_tv"/>
    <ImageButton
        android:id="@+id/item_locker_album_more_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_locker_album_singer_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_locker_album_singer_tv"
        />
    <ImageButton
        android:id="@+id/item_locker_album_play_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_player_play"
        app:layout_constraintEnd_toStartOf="@id/item_locker_album_more_ib"
        app:layout_constraintTop_toTopOf="@id/item_locker_album_more_ib"
        app:layout_constraintBottom_toBottomOf="@id/item_locker_album_more_ib"/>
</androidx.constraintlayout.widget.ConstraintLayout>