<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_album_cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_album_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"/>
        <ImageView
            android:id="@+id/itme_album_play_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/widget_black_play"
            android:layout_marginTop="100dp"
            android:layout_marginStart="100dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="LILAC"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_album_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_album_cardView"/>
    <TextView
        android:id="@+id/item_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/item_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_title_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>