<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/signup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/signup_id_lo"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/signup_id_et"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="아이디(이메일)"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/signup_at_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/signup_email_et"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="직접입력"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/signup_id_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/signup_id_lo"
        app:layout_constraintTop_toBottomOf="@id/signup_id_lo"/>
    <FrameLayout
        android:id="@+id/signup_name_lo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_id_error_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/signup_name_et"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:hint="이름"
            android:textSize="15sp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/signup_pw_lo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_name_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/signup_pw_et"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="330dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:src="@drawable/btn_input_password"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/signup_pw_check_lo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_pw_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/signup_pw_check_et"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="비밀번호 확인"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="330dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:src="@drawable/btn_input_password"/>
    </FrameLayout>
    <TextView
        android:id="@+id/signup_sign_up_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:text="가입완료"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/flo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/signup_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/flo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>