<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_song_cardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_song_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"/>
        </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="라일락"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_song_cardView"
        app:layout_constraintStart_toEndOf="@id/item_song_cardView"/>
    <TextView
        android:id="@+id/item_song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_song_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_song_title_tv"/>
    <ImageButton
        android:id="@+id/item_song_more_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_song_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_song_singer_tv"
        />
    <ImageButton
        android:id="@+id/item_locker_play_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_player_play"
        app:layout_constraintEnd_toStartOf="@id/item_song_more_ib"
        app:layout_constraintTop_toTopOf="@id/item_song_more_ib"
        app:layout_constraintBottom_toBottomOf="@id/item_song_more_ib"/>
</androidx.constraintlayout.widget.ConstraintLayout>