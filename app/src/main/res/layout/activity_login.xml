<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/login_exit_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/btn_actionbar_close"
        app:layout_constraintBottom_toTopOf="@id/login_flo_iv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/login_flo_iv"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_flo_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/login_id_lo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_flo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="아이디(이메일)"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/login_at_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/login_email_et"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="직접입력"
            android:textSize="15sp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/login_pw_lo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_id_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginVertical="10dp"
            android:src="@drawable/btn_input_password"/>
    </FrameLayout>
    <TextView
        android:id="@+id/login_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/login_pw_lo"
        app:layout_constraintTop_toBottomOf="@id/login_pw_lo"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/login_sign_in_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:text="로그인"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/flo"
        app:layout_constraintTop_toBottomOf="@id/login_error_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/login_find_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/login_sign_in_tv"
        app:layout_constraintTop_toBottomOf="@id/login_sign_in_tv"/>
    <TextView
        android:id="@+id/login_dist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅣ"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/login_find_id_tv"
        app:layout_constraintTop_toBottomOf="@id/login_sign_in_tv"/>
    <TextView
        android:id="@+id/login_find_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/login_dist_tv"
        app:layout_constraintTop_toBottomOf="@id/login_sign_in_tv"/>
    <TextView
        android:id="@+id/login_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/login_sign_in_tv"
        app:layout_constraintTop_toBottomOf="@id/login_sign_in_tv"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_tlogin_lo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_find_id_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_20_logo_tid_white"
            app:layout_constraintEnd_toStartOf="@id/login_tlogin_tv"
            app:layout_constraintTop_toTopOf="@id/login_tlogin_tv"
            app:layout_constraintBottom_toBottomOf="@id/login_tlogin_tv"/>
        <TextView
            android:id="@+id/login_tlogin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="아이디로 로그인"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_phonelogin_lo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_border"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_tlogin_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_setting_phone"
            app:layout_constraintEnd_toStartOf="@id/login_phonelogin_tv"
            app:layout_constraintTop_toTopOf="@id/login_phonelogin_tv"
            app:layout_constraintBottom_toBottomOf="@id/login_phonelogin_tv"/>
        <TextView
            android:id="@+id/login_phonelogin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="휴대폰 번호 로그인"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_phonelogin_lo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/naver_44"/>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/kakako_44"/>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/apple_44"/>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/login_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/flo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>