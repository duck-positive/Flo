                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="라일락"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="3dp"
                    app:layout_constraintTop_toTopOf="@id/album_list1_title_tv"
                    app:layout_constraintStart_toEndOf="@id/album_list1_title_tv"
                    app:layout_constraintBottom_toBottomOf="@id/album_list1_title_tv"/>
                <TextView
                    android:id="@+id/album_list1_artist_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU)"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/album_list1_title_tv"
                    app:layout_constraintStart_toStartOf="@id/album_list1_title_tv"/>
                <ImageButton
                    android:id="@+id/album_list1_more_ib"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_player_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/album_list1_song_index_tv"
                    />
                <ImageButton
                    android:id="@+id/album_list1_play_ib"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_player_play"
                    app:layout_constraintEnd_toStartOf="@id/album_list1_more_ib"
                    app:layout_constraintTop_toTopOf="@id/album_list1_more_ib"
                    app:layout_constraintBottom_toBottomOf="@id/album_list1_more_ib"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
